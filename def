def soustraction():
    a = float(input("Entrez le premier nombre : "))
    b = float(input("Entrez le deuxième nombre : "))
    resultat = a - b
    
    # Si le résultat est un entier, on l'affiche comme tel
    if resultat == int(resultat):
        resultat = int(resultat)
    
    print(f"La soustraction de {a} et {b} est égale à {resultat}")

soustraction()